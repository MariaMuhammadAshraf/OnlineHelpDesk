@model IEnumerable<OnlineHelpDesk.Models.Facility>

@{
    ViewData["Title"] = "Facilities List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="background-color: #d39333; min-height: 80vh; padding: 40px 0;">
    <h1 class="text-center text-uppercase mb-4 fw-bold text-white tracking-wide" style="letter-spacing: 3px; text-shadow: 2px 3px 4px rgba(0, 0, 0, 0.4);">Facilities</h1>

    <div class="mb-4 text-center">
        <a asp-action="AddFacility" class="btn btn-dark btn-lg px-5 fw-semibold shadow-lg">
            Add New Facility
        </a>
    </div>

    <div class="container px-0">
        <div class="table-responsive border border-3 border-dark shadow-lg rounded overflow-auto bg-white">
            <table class="table table-bordered table-hover table-striped align-middle mb-0 text-center">
                <thead class="table-dark border border-5 border-primary">
                    <tr>
                        <th>Facility ID</th>
                        <th>Facility Name</th>
                        <th>Description</th>
                        <th>Created Date</th>
                        <th>Is Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var facility in Model)
                    {
                        <tr>
                            <td>@facility.FacilityId</td>
                            <td class="fw-bold">@facility.FacilityName</td>
                            <td>@facility.Description</td>
                            <td>@facility.CreatedDate.ToShortDateString()</td>
                            <td>
                                @if (facility.IsActive)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </td>
                            <td>
                                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">

                                    <a asp-action="EditFacility" asp-route-id="@facility.FacilityId"
                                       class="btn btn-sm btn-outline-dark w-100">
                                        ✏️ Edit
                                    </a>

                                    <a asp-action="DeleteFacility" asp-route-id="@facility.FacilityId"
                                       class="btn btn-sm btn-outline-primary w-100"
                                       onclick="return confirm('Are you sure you want to delete this facility?');">
                                        🗑️ Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

