@model List<OnlineHelpDesk.Models.ContactMessage>

@{
    ViewData["Title"] = "Contact Messages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


 
<section style="background-color: #d39333; min-height: 80vh;">
    @if (Model.Count == 0)
    {
        <p class="text-center text-muted">No messages found.</p>
    }
    else
    {
        <div class="d-flex justify-content-center px-2 px-md-4">
            <div class="p-4 rounded shadow-lg w-100 bg-white mt-5" style="max-width: 1000px;">
                <h1 class="text-center mb-4 text-dark text-uppercase tracking-wide" style="letter-spacing: 2px; text-shadow: 2px 3px 4px rgba(0, 0, 0, 0.4);">Contact Messages</h1>
                <div class="table-responsive border border-3 border-dark shadow-lg rounded bg-white">
                    <table class="table table-bordered table-striped align-middle mb-0 text-center">
                        <thead class="table-dark border border-5 border-primary">
                            <tr class="text-light fw-semibold">
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Subject</th>
                                <th>Message</th>
                                <th>Submitted At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var msg in Model)
                            {
                                <tr>
                                    <td>@msg.Name</td>
                                    <td>@msg.Email</td>
                                    <td>@msg.Mobile</td>
                                    <td>@msg.Subject</td>
                                    <td>@msg.Message</td>
                                    <td>@msg.SubmittedAt</td>
                                    <td>
                                     
                                        <div class="d-grid d-sm-flex justify-content-center">
                                            <a asp-action="DeleteContact" asp-controller="Admin" asp-route-id="@msg.Id"
                                               class="btn btn-outline-primary w-100 py-1 d-flex align-items-center justify-content-center gap-1"
                                               onclick="return confirm('Are you sure you want to delete this Contact?');">
                                                <span style="font-size: 1rem;">🗑️</span>
                                                <span style="font-size: 0.875rem;">Delete</span>
                                            </a>
                                        </div>

                                       

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</section>
