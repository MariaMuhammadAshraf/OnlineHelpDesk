@model OnlineHelpDesk.Models.Facility

@{
    ViewData["Title"] = "Edit Facility";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="d-flex justify-content-center align-items-center" style="min-height: 80vh; background: #d39333;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-5 bg-white rounded border border-5 border-dark shadow-lg">
                        <h2 class="text-center text-dark mb-4 fw-bold" style="letter-spacing: 2px;">Edit Facility</h2>

                        <form asp-action="EditFacility" method="post">
                            <input type="hidden" asp-for="FacilityId" />

                            <div class="mb-3">
                                <label asp-for="FacilityName" class="form-label fw-semibold text-dark"></label>
                                <input asp-for="FacilityName" class="form-control form-control-lg" />
                                <span asp-validation-for="FacilityName" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-semibold text-dark"></label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="form-check mb-4">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveCheckbox" />
                                <label asp-for="IsActive" class="form-check-label text-dark fw-semibold" for="isActiveCheckbox"></label>
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-outline-primary px-4">Update</button>
                                <a asp-action="Facilities" class="btn btn-outline-dark px-4">Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
