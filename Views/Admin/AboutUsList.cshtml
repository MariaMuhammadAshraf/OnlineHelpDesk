@model List<Aboutu>
@{
    ViewData["Title"] = "Aboutus";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="background-color: #d39333; min-height: 80vh; padding: 40px 0;">
    <div class="container">
        <div class="card shadow-lg border-3 border-dark rounded-4">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center rounded-top-4">
                <h4 class="mb-0 fw-bold text-white">About Us Entries</h4>
                <a href="@Url.Action("AddAboutUs")" class="btn btn-light fw-semibold shadow-sm">
                    Add New
                </a>
            </div>

            <div class="card-body" style="background-color: #f8f9fa; border-bottom-right-radius: 0.75rem; border-bottom-left-radius: 0.75rem;">
                @if (Model != null && Model.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped align-middle text-center shadow-sm mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th style="width: 50%">Content</th>
                                    <th style="width: 25%">Image</th>
                                    <th style="width: 25%">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-start px-3">@item.Content</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ImagePath))
                                            {
                                                <img src="@item.ImagePath" class="img-thumbnail rounded shadow-sm" style="max-width: 100px;" />
                                            }
                                            else
                                            {
                                                <span class="text-muted">No image</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-grid d-sm-flex justify-content-center gap-2">
                                                <a href="@Url.Action("EditAboutUs", new { id = item.Id })"
                                                   class="btn btn-sm btn-outline-primary  w-100">
                                                    ✏️ Edit
                                                </a>
                                                <a href="@Url.Action("DeleteAboutUs", new { id = item.Id })"
                                                   class="btn btn-sm btn-outline-dark  w-100"
                                                   onclick="return confirm('Are you sure you want to delete this entry?');">
                                                    🗑️ Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center text-muted fw-semibold">No entries found.</p>
                }
            </div>
        </div>
    </div>
</div>



