@model IEnumerable<OnlineHelpDesk.Models.UserRegistration>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section style="background-color: #d39333; min-height: 80vh;">
    <div class="d-flex justify-content-center px-2 px-md-4">
        <div class="p-4 rounded shadow-lg w-100 bg-white mt-5" style="max-width: 1000px;">

            <h1 class="text-center mb-4 text-dark text-uppercase tracking-wide" style="letter-spacing: 2px; text-shadow: 2px 3px 4px rgba(0, 0, 0, 0.4);">User Management</h1>
            <div class="table-responsive border border-3 border-dark shadow-lg rounded bg-white">
                <table class="table table-bordered table-striped mb-0 align-middle text-center">
                    <thead class="table-dark border border-5 border-primary">
                        <tr>
                            <th>User ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Full Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.UserId</td>
                                    <td>@user.UserName</td>
                                    <td>@user.UserEmail</td>
                                    <td>@user.UserRole</td>
                                    <td>@(user.FirstName + " " + user.LastName)</td>
                                    <td>
                                        <div class="d-grid d-sm-flex justify-content-center">
                                            <form asp-action="Delete" asp-controller="Admin" asp-route-id="@user.UserId" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                                <button type="submit" class="btn btn-sm btn-outline-primary w-100">🗑️ Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No users found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
