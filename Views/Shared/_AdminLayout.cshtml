<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Online Help Desk</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="256x256" href="~/img/favicon.png" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Roboto:wght@700;800&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">

     <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
 
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner"
         class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar Start -->


    <div class="container-fluid bg-white sticky-top wow fadeIn" data-wow-delay="0.1s">
        <div class="container">
            <nav class="navbar navbar-expand-lg bg-white navbar-light p-lg-0">

                <a class="d-lg-none"> @* //larger screen pey hidden krne ki class /// *@
                <h1 class="text-primary fw-bold m-0"
                        style="
                      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                      letter-spacing: 1px;
                      font-size: 32px;
                      text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
                       display: inline-block;">
                        <span style="color: #222;">O</span>nline
                        <span style="color: #222;">H</span>elp
                        <span style="color: #222;">D</span>esk
                    </h1></a>
                <button type="button" class="navbar-toggler me-0" data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-auto d-flex justify-content-center align-items-center">

                        <a asp-controller="Admin" asp-action="Index" class="nav-item nav-link">
                            <i class="fas fa-chart-line"></i> Admin Panel
                        </a>

                        <a asp-controller="Admin" asp-action="Facilities" class="nav-item nav-link">
                            <i class="fas fa-building"></i> Facilities
                        </a>

                        <a asp-controller="Admin" asp-action="ContactList" class="nav-item nav-link">
                            <i class="fas fa-phone-square-alt"></i> Contact Details
                        </a>

                        <a asp-controller="Admin" asp-action="Users" class="nav-item nav-link">
                            <i class="fas fa-users"></i> User Details
                        </a>

                        <a asp-controller="Admin" asp-action="AboutUsList" class="nav-item nav-link">
                            <i class="fas fa-info-circle"></i> About Us
                        </a>

                        <a asp-controller="Admin" asp-action="Logout" class="nav-item nav-link">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>

                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Navbar End -->

    <div>
        @RenderBody()
    </div>
    <!-----Footer start-------->
   <!-- Copyright Start -->
    <div class="container-fluid text-body copyright py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy;2025 <a class="fw-semi-bold" href="~/">Online Help Desk</a>, All Right Reserved.
                </div>
                <div class="col-md-6 text-center text-md-end">

                    <a class="fw-semi-bold" href="~/"></a> Distributed by <a href="~/" target="_blank">Online Help Desk</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Copyright End -->
    <!-----Footer end-------->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
        <i class="bi bi-arrow-up"></i>
    </a>
    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>


    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
</body>

</html>
<style>
    .navbar-nav .nav-link {
        position: relative;
        padding: 10px 10px;
        margin: 0 2px;
        font-weight: 900;
        border-radius: 6px;
        transition: all 0.3s ease;
        color: white;
        text-decoration: none;
    }

        .navbar-nav .nav-link::after {
            content: '';
            position: absolute;
            left: 20%;
            bottom: 6px;
            width: 60%;
            height: 1px;
            background-color: #d39333; /* Bootstrap primary */
            transform: scaleX(0);
            transform-origin: center;
            transition: transform 0.3s ease;
        }

        .navbar-nav .nav-link:hover::after {
            transform: scaleX(3);
        }

        .navbar-nav .nav-link:hover {
            color: #d39333 !important;
        }

        .navbar-nav .nav-link i {
            color: #d39333 !important; /* Make all icons black */
            font-size: 1.25rem; /* Slightly larger icons */
            margin-right: 5px; /* Space between icon and text */
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.4); /* shadow here */
        }
</style>




