<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Online Help Desk</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="256x256" href="~/img/favicon.png" />


    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Roboto:wght@700;800&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner"
         class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
    </div>
    <!-- Spinner End -->
    <!-- Topbar Start -->
       <div class="container-fluid bg-primary text-white d-none d-lg-flex wow fadeIn" data-wow-delay="0.1s">
          <div class="container py-3">
            <div class="d-flex align-items-center">
             <a>  <h2 class="text-white fw-bold m-0"
                        style="
                      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                      letter-spacing: 1px;
                      font-size: 32px;
                      text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
                       display: inline-block;">
                        <span style="color: #222;">O</span>nline
                        <span style="color: #222;">H</span>elp
                        <span style="color: #222;">D</span>esk
                    </h2></a> 
                     <div class="ms-auto d-flex align-items-center">
                    <small class="ms-4"><i class="fa fa-map-marker-alt me-3"></i>786 Street, Karachi, Pakistan</small>
                    <small class="ms-4"><i class="fa fa-envelope me-3"></i>info@example.com</small>
                    <small class="ms-4"><i class="fa fa-phone-alt me-3"></i>+92 3456789</small>
                    <div class="ms-3 d-flex">
                        <a class="btn btn-sm-square btn-light text-primary ms-2" href="https://www.facebook.com/" target="_blank">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="btn btn-sm-square btn-light text-primary ms-2" href="https://www.twitter.com/" target="_blank">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="btn btn-sm-square btn-light text-primary ms-2" href="https://www.linkedin.com/" target="_blank">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid bg-white sticky-top wow fadeIn" data-wow-delay="0.1s">
        <div class="container">
            <nav class="navbar navbar-expand-lg bg-white navbar-light p-lg-0">

                <a href="~/index.html" class="navbar-brand d-lg-none">
                    <h1 class="text-primary fw-bold m-0"
                        style="
                      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                      letter-spacing: 1px;
                      font-size: 32px;
                      text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
                       display: inline-block;">
                        <span style="color: #222;">O</span>nline
                        <span style="color: #222;">H</span>elp
                        <span style="color: #222;">D</span>esk
                    </h1></a>
               <button type="button" class="navbar-toggler me-0" data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav">

                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link">Home</a>
                        <a asp-controller="Home" asp-action="About" class="nav-item nav-link">About</a>
                        <a asp-controller="Home" asp-action="Facilities" class="nav-item nav-link">Facilities</a>
                        <a asp-controller="Home" asp-action="Contact" class="nav-item nav-link">Contact</a>
                        <a class="nav-item nav-link" asp-controller="Home" asp-action="SubmitReview">Submit Review</a>
                        <a asp-controller="Home" asp-action="Reviews" class="nav-item nav-link">Reviews</a>

                        @if (Context.Session.GetString("UserRole") == "customer")
                        {
                            <a asp-controller="Home" asp-action="MyAccount" class="nav-item nav-link">My Account</a>
                            <a asp-controller="Home" asp-action="ActiveFacility" class="nav-item nav-link">Active Facility</a>
                            <a asp-controller="Home" asp-action="ChangePassword" class="nav-item nav-link">Change Password</a>
                           <a asp-controller="Home" asp-action="Logout" class="nav-item nav-link">Logout</a> 
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Registration" class="nav-item nav-link ">Registration</a>
                            <a asp-controller="Home" asp-action="Login" class="nav-item nav-link">Login</a>
                         
                          
                        }

                    </div>


                    
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar End -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-----Footer start-------->
    <div class="container-fluid bg-dark footer py-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase text-light mb-4">Our Office</h5>
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary me-3"></i>786 Street, Karachi, Pakistan</p>
                    <p class="mb-2"><i class="fa fa-phone-alt text-primary me-3"></i>+92 3456789</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary me-3"></i>info@example.com</p>
                    <div class="d-flex pt-3">
                        <a class="btn btn-sm-square btn-light text-primary ms-2" href="https://www.twitter.com/" target="_blank">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="btn btn-sm-square btn-light text-primary ms-2" href="https://www.facebook.com/" target="_blank">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="btn btn-sm-square btn-light text-primary ms-2" href="https://www.youtube.com/" target="_blank">
                            <i class="fab fa-youtube"></i>
                        </a>
                        <a class="btn btn-sm-square btn-light text-primary ms-2" href="https://www.linkedin.com/" target="_blank">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase text-light mb-4">Quick Links</h5>
                    <a asp-controller="Home" asp-action="About" class="btn btn-link">About Us</a>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-link">Contact Us</a>
                    <a asp-controller="Home" asp-action="Facilities" class="btn btn-link">Facilities</a>
                    <a asp-controller="Home" asp-action="Reviews" class="btn btn-link">Reviews</a>

                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase text-light mb-4">Business Hours</h5>
                    <p class="text-uppercase mb-0">Monday - Friday</p>
                    <p>09:00 am - 07:00 pm</p>
                    <p class="text-uppercase mb-0">Saturday</p>
                    <p>09:00 am - 12:00 pm</p>
                    <p class="text-uppercase mb-0">Sunday</p>
                    <p>Closed</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-uppercase text-light mb-4">Gallery</h5>
                    <div class="row g-1">
                        <div class="col-4">
                            <img class="img-fluid" src="~/img/service-1.jpg" alt="">
                        </div>
                        <div class="col-4">
                            <img class="img-fluid" src="~/img/service-2.jpg" alt="">
                        </div>
                        <div class="col-4">
                            <img class="img-fluid" src="~/img/service-3.jpg" alt="">
                        </div>
                        <div class="col-4">
                            <img class="img-fluid" src="~/img/service-4.jpg" alt="">
                        </div>
                        <div class="col-4">
                            <img class="img-fluid" src="~/img/service-5.jpg" alt="">
                        </div>
                        <div class="col-4">
                            <img class="img-fluid" src="~/img/service-6.jpg" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Copyright Start -->
    <div class="container-fluid text-body copyright py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy;2025 <a class="fw-semi-bold" href="~/">Online Help Desk</a>, All Right Reserved.
                </div>
                <div class="col-md-6 text-center text-md-end">
                   
                    <a class="fw-semi-bold" href="~/"></a> Distributed by <a href="~/" target="_blank">Online Help Desk</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Copyright End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
        <i class="bi bi-arrow-up"></i>
    </a>
    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
   


    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
</body>

</html>
<style>
    .navbar-nav .nav-link {
        position: relative;
        padding: 10px 10px;
        margin: 0 2px;
        font-weight: 900;
        border-radius: 6px;
        transition: all 0.3s ease;
        color: white;
        text-decoration: none;
    }

        .navbar-nav .nav-link::after {
            content: '';
            position: absolute;
            left: 20%;
            bottom: 6px;
            width: 60%;
            height: 1px;
            background-color: #d39333; /* Bootstrap primary */
            transform: scaleX(0);
            transform-origin: center;
            transition: transform 0.3s ease;
        }

        .navbar-nav .nav-link:hover::after {
            transform: scaleX(3);
        }

        .navbar-nav .nav-link:hover {
            color: #d39333 !important;
        }
</style>

