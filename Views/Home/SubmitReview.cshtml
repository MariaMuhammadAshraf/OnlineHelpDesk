@model OnlineHelpDesk.Models.Review

@{
    ViewData["Title"] = "Submit Review";
}



@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="container-fluid py-5" style="background-color: #d39333; min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="bg-white shadow-lg p-5 rounded-3 border border-5 border-light" style="box-shadow: 0 0 12px rgba(0, 0, 0, 0.15);">

                <h2 class="text-center mb-4 text-uppercase tracking-wide " style="letter-spacing: 3px; text-shadow: 2px 3px 4px rgba(0, 0, 0, 0.4);">Submit Your Review</h2>

                <form asp-action="SubmitReview" method="post" enctype="multipart/form-data">
                    <div class="form-group mb-3">
                        <label asp-for="ClientName" class="form-label fw-semibold text-dark"></label>
                        <input asp-for="ClientName" class="form-control" placeholder="Your Name" />
                        <span asp-validation-for="ClientName" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Profession" class="form-label fw-semibold text-dark"></label>
                        <input asp-for="Profession" class="form-control" placeholder="Your Profession" />
                        <span asp-validation-for="Profession" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Rating" class="form-label fw-semibold text-dark">Rating (1 to 5)</label>
                        <input asp-for="Rating" type="number" min="1" max="5" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Message" class="form-label fw-semibold text-dark">Your Feedback</label>
                        <textarea asp-for="Message" class="form-control" rows="4" placeholder="Write your message here..."></textarea>
                        <span asp-validation-for="Message" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="ImageFile" class="form-label fw-semibold text-dark">Upload Photo (Optional)</label>
                        <input asp-for="ImageFile" type="file" class="form-control" />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-dark px-5 rounded-1 custom-submit-btn">Submit Review</button>

                       @*  <button type="button" class="btn btn-dark px-5 rounded-1 custom-submit-btn"
                                onclick="window.location.href='/Home/Reviews';">
                            Submit Review
                        </button> *@

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .custom-submit-btn {
        transition: all 0.3s ease;
    }

        .custom-submit-btn:hover {
            background-color: #d39333;
            color: #000;
            border: 1px solid #000;
        }
</style>




