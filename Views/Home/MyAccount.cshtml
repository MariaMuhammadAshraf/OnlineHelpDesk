@model OnlineHelpDesk.Models.UserRegistration

@{
    ViewBag.Title = "My Account";
}



<div class="container-fluid" style="background-color: #d39333; min-height: 50vh;">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5 mb-5">
            <div class="card shadow-lg border-dark" style="border-width: 3px;">
          <div class="card-header bg-primary text-white text-center fw-bold">
                    My Account
                </div>
                <div class="card-body">

                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success">@TempData["success"]</div>
                    }
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["error"]</div>
                    }

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <form asp-action="MyAccount" method="post">
                        <input type="hidden" asp-for="UserId" />

                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="form-label fw-bold text-dark">Username</label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter your name" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="UserEmail" class="form-label fw-bold text-dark">Email</label>
                            <input asp-for="UserEmail" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary fw-bold">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
