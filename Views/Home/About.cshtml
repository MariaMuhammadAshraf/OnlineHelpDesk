 @model OnlineHelpDesk.Models.Aboutu
 <!-- Page Header Start -->
<div class="container-fluid page-header pt-5 mb-6 wow fadeIn" data-wow-delay="0.1s">
    <div class="container col-12 text-center pt-5">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="bg-white p-5">
                    <h1 class="display-6 text-uppercase mb-3 animated slideInDown">About</h1>
                    <nav aria-label="breadcrumb animated slideInDown">
                        <ol class="breadcrumb justify-content-center mb-0">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="About">About</a></li>
                            <li class="breadcrumb-item" aria-current="page">About</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- About Start -->


<div class="container-fluid pt-6 pb-6">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="about-img">
                    @if (!string.IsNullOrEmpty(Model?.ImagePath))
                    {
                        <img class="img-fluid w-100" src="@Url.Content(Model.ImagePath)" alt="About Image" />
                    }
                    else
                    {
                        <img class="img-fluid w-100" src="~/img/about.jpg" alt="Default About Image" />
                    }
                </div>
            </div>

            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <h1 class="display-6 text-uppercase mb-4">
                    Why Choose Our Help Desk? Who We Are & What We Offer
                </h1>

                @if (Model != null)
                {
                    <p class="mb-4">@Html.Raw(Model.Content)</p>
                }
                else
                {
                    <p class="text-muted">About content is not available.</p>
                }

                <div class="row g-5 mb-4">
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 btn-xl-square bg-light me-3">
                                <i class="fa fa-users-cog fa-2x text-primary"></i>
                            </div>
                            <h5 class="lh-base text-uppercase mb-0">Certified Expert & Team</h5>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 btn-xl-square bg-light me-3">
                                <i class="fa fa-tachometer-alt fa-2x text-primary"></i>
                            </div>
                            <h5 class="lh-base text-uppercase mb-0">Fast & Reliable Services</h5>
                        </div>
                    </div>
                </div>

                <p><i class="fa fa-check-square text-primary me-3"></i>We offer 24/7 assistance through ticketing, live chat, and email.</p>
                <p><i class="fa fa-check-square text-primary me-3"></i>Our platform is designed to make support quick, simple, and effective.</p>
                <p><i class="fa fa-check-square text-primary me-3"></i>We use automation and real-time tracking to resolve queries faster.</p>

                <div class="border border-5 border-primary p-4 text-center mt-4">
                    <h4 class="lh-base text-uppercase mb-0">
                        your reliable partner for instant and effective customer support.
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About End -->