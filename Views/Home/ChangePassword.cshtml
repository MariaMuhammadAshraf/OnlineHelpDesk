@model OnlineHelpDesk.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}


 

<div class="container-fluid" style="background-color: #d39333; min-height: 50vh;">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5 mb-5">
            <div class="card shadow-lg border-dark" style="border-width: 3px;">
                <div class="card-header bg-primary text-white text-center fw-bold">
                    Change Password
                </div>
                <div class="card-body">
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["error"]</div>
                    }
                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success">@TempData["success"]</div>
                    }

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.CurrentPassword, new { @class = "form-label fw-bold text-dark" })
                            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", placeholder = "Enter current password" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "form-label fw-bold text-dark" })
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Enter new password" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label fw-bold text-dark" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm new password" })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary fw-bold">Change Password</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
